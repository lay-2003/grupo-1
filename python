import time

def semaforo():
    while True:
        # Estado VERDE
        print("Semaforo: VERDE")
        time.sleep(5)  # Mantém o estado verde por 5 segundos

        # Estado AMARELO
        print("Semaforo: AMARELO")
        time.sleep(2)  # Mantém o estado amarelo por 2 segundos

        # Estado VERMELHO
        print("Semaforo: VERMELHO")
        time.sleep(5)  # Mantém o estado vermelho por 5 segundos

if __name__ == "__main__":
    try:
        semaforo()
    except KeyboardInterrupt:
        print("semáforo interrompida manualmente.")

